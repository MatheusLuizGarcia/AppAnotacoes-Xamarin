<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Anotaçoes.Views.Home"
             Title="Home">
    <ContentPage.Content>
        <StackLayout VerticalOptions="Center" Margin="30,90,30,30" HorizontalOptions="CenterAndExpand">
            <Label Text="App Anotações" FontSize="Medium" FontAttributes="Bold" />
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Button Grid.Row="0" Grid.Column="0" x:Name="btNovo" Text="Nova Tarefa" Clicked="btNovo_Clicked" />
                <Button Grid.Row="0" Grid.Column="1" x:Name="btBusca" Text="Buscar" Clicked="btBusca_Clicked" />
                <Button Grid.Row="1" Grid.Column="0" x:Name="btListar" Text="Lista" Clicked="btListar_Clicked" />
                <Button Grid.Row="1" Grid.Column="1" x:Name="btSobre" Text="Sobre"  Clicked="btSobre_Clicked" />
            </Grid>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>